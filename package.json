{
  "name": "custom-server-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon && npm run copy-static",
    "deploy:dev": "cross-env APP_ENV=dev nodemon",
    "build": "npm run build:next && npm run build:server",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "copy-static": "cpx \"public/{**,.**}/{*,.*}\" \".next/static\""
  },
  "dependencies": {
    "express": "^4.17.1",
    "next": "^9.3.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.34",
    "@types/react-dom": "16.9.7",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.3",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
